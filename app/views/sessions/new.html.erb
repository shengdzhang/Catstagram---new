<div class="auth-wrap">
  <div class="form-wrap container col-xs-offset-5">
    <h1 class="col-xs-offset-1"> Sign In! </h1>

    <br/>

    <form action="<%= session_url %>" method="post">
      <%= auth_token %>
      <div class="form-group row">
        <div class="col-xs-offset-1">
          <label class="signing"> Username </label>
          <input class="signing" type="text" name="user[username]" value=""/>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-xs-offset-1">
          <label class="signing"> Password </label>
          <input class="signing" type="password" name="user[password]" value=""/>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-xs-offset-1">
          <input class="button btn btn-primary" type="submit" value="Sign In"/>
        </div>
      </div>

    </form>

    <div id="signup-message" class="col-xs-offset-1">
    Need a new account? <a href= "<%= new_user_url%>" > Sign Up </a>
    </div>

    <div class="col-xs-offset-1 guest-message">
      <form action="<%= guest_session_url %>" method="post">
        <%= auth_token %>
        Or use a
        <input class="guest-button" type="submit" value="Guest"/>
        account.
      </form>
    </div>

  </div>
</div>
