<div class="auth-wrap">
  <h1 class="welcome"> Welcome to Catstagram </h1>
    <div class="form-wrap container col-xs-offset-2">
      <h1 class="col-xs-offset-1"> Sign Up! </h1>

      <br/>

      <form action="<%= users_url %>" method="post">
        <%= auth_token %>
        <div class="form-group row">
          <div class="col-xs-offset-1">
            <label class="signing"> Username </label>
            <input class="signing" type="text" name="user[username]" value=""/>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-offset-1">
            <label class="signing"> Password </label>
            <input class="signing" type="password" name="user[password]" value=""/>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-offset-1">
            <input class="button btn btn-primary" type="submit" value="Sign Up"/>
          </div>
        </div>
      </form>

      <div id="signin-message" class="col-xs-offset-1">
      Already have an account? <a href= "<%= new_session_url%>" > Sign In </a>
      </div>

      <br/>
      <br/>
  </div>
</div>
